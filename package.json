{
  "name": "monorepo-publish-action",
  "version": "1.1.0",
  "description": "A package to publish packages in a monorepo.",
  "main": "dist/index.js",
  "scripts": {
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "rollup -c",
    "build": "rimraf dist && npm run build:types && npm run build:js",
    "lint": "eslint --ext .js,.ts ./src",
    "lint:fix": "npm run lint -- --fix",
    "test": "cross-env NODE_ENV=test jest --config ./test/jest.config.js",
    "test:coverage": "npm run test -- --coverage"
  },
  "keywords": [],
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-swc": "^0.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@tada5hi/commitlint-config": "^1.1.5",
    "@tada5hi/eslint-config-typescript": "^1.2.8",
    "@tada5hi/semantic-release": "^0.3.1",
    "@tada5hi/tsconfig": "^0.5.0",
    "@types/node": "^20.11.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "rollup": "^4.9.5",
    "semantic-release-major-tag": "^0.3.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "workspaces-publish": "^1.4.1"
  },
  "author": {
    "name": "Peter Placzek",
    "email": "contact@tada5hi.net",
    "url": "https://github.com/tada5hi"
